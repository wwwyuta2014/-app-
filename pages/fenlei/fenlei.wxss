/* pages/fenlei/fenlei.wxss */

.cate-search {
  display: flex;
  height: 45rpx;
  background: #ededed;
  width: 90%;
  margin: 0 auto;
  border-radius: 10rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.cate-search image {
  height: 35rpx;
  width: 35rpx;
}

.cate-search text {
  color: #000;
}
/* 中间内容 */
.content {
  display: flex;
  flex-wrap: nowrap;
  height: calc(100% - 78rpx);
  border-top: 1rpx solid #ededed;
}
/* 左侧 */

.mv-item {
  width: 168rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
}

.active {
  color: #ab2b2b;
  border-left: 4rpx solid #ab2b2b;
}

page {
  height: 100%;
}

.fnelei {
  height: 100%;
}
.content-left {
  height: 100%;
  width: 168rpx;
}

::-webkit-scrollbar {
  height: 0;
  width: 0;
}
/* 右侧 */
.content-right{
  flex: 1;
}
.content-right image{
 width: 100%;
 height: 222rpx;
}
.content-right .fl{
 text-align: center;
 margin: 10rpx 0;
}
.rg-item{
  display: flex;
  flex-direction: column;
  width: calc(100% / 3);
  align-items: center;
}
.nwap-right{
  display: flex;
  flex-wrap: wrap;
}
