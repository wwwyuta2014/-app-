.header {
  display: flex;
  padding: 0 10rpx;
  align-items: center;
}

.address {
  width: 115rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.searc {
  background: #ededed;
  height: 55rpx;
  flex: 1;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
}
.searc image {
  height: 25rpx;
  width: 25rpx;
  padding: 0 15rpx;
}
.searc input {
  align-items: center;
  padding-left: 10rpx;
  
}

/* 轮播 */
.conter{
  padding-top: 10rpx;
}
.conter image{
  height: 350rpx;
  width: 100%;
}
/* cate */
.cate{
  display: flex;
  flex-wrap: nowrap;
}
.cate-item{
 padding-left: 20rpx;
  display: flex;
  width: 500rpx;
  flex-direction: column;
}
.cate-item image{
  height: 48rpx;
  width: 48rpx;
}
.cate-item text{
width: 100rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center
}
/* 3 */
.pinpai{
  display: flex;
 
}

/* 横向 */
.sc{
display: flex;
flex-wrap: nowrap;
}
.sc-item{
 display: flex;
  width: 280rpx;
  flex-direction: column;
}
.sc-item image{
  height: 280rpx;
  width: 280rpx;
}
.sc-item .title{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.sc-item .dosc{
   text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.sc-item .price{
  color: rgb(218, 58, 58);
  font-size: 30rpx;
}