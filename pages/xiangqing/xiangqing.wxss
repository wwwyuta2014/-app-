/* pages/xiangqing/xiangqing.wxss */
.top {
  position: relative;
}
swiper{
  height: 700rpx;
}
.content{
  height: 100%;
}
.content image{
   height: 100%;
  width: 100%;
}
.share{
  width: 150rpx !important;
  height: 64rpx !important;
  border-radius: 30rpx 0 0 30rpx;
  background: #e0a354;
  text-align: center; 
  position: absolute;
  top: 0;
  right: 0;
  padding: 0;
  line-height: 64rpx;
  font-size: 24rpx;
  min-height: 64rpx !important;
}

.GL{
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  font-size: 32rpx;
}

.cart{
  position: fixed;
  border-top: 3rpx solid #999;
  display: flex;
  height: 100rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  justify-content: space-between;
}
.cart image{
  height: 48rpx;
  width: 48rpx;
  padding:30rpx 0 0 60rpx;
}
.start{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
   border-right: 3rpx solid #999;
}
.shop{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
   border-right: 3rpx solid #999;
}
.toMoney{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.toCart{
  height: 100rpx;
  line-height: 100rpx;
  flex: 1;
  background: #e9232c;
  text-align: center;
}

.modal{

}

.modal .mc{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0.4) 
}
.modal .selevt-product{
  box-sizing: border-box;
  height: 500rpx;
  position: fixed;
  bottom: -500rpx;
  width: 100%;
  background: white;
  z-index: 2;
  display: flex;
  flex-direction: column;
  padding:  30rpx;
}
.sp-top{
  display: flex;
  justify-content: space-between;
}
.t-left{
  display: flex;
}
.t-left image{
 height: 176rpx;
 width: 176rpx;
}
.t-left>view{
  display: flex;
  flex-direction: column;
  align-self: flex-end;
  justify-content: center;
  margin-left: 20rpx;
}

.sp-bottom{
  display: flex;
  flex-direction: column;
}
.sp-bottom .num{
  display: flex;
}
.sp-bottom .num>.sub,
.sp-bottom .num>.add,
.sp-bottom .num>.text{
  width: 90rpx;
  height: 70rpx;
  border: 2rpx solid #ededed;
  text-align: center;
  line-height: 70rpx;
}